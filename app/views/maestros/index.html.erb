<p id="notice"><%= notice %></p>

<h1>Listing Maestros</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Edad</th>
      <th>Direccion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maestros.each do |maestro| %>
      <tr>
        <td><%= maestro.nombre %></td>
        <td><%= maestro.edad %></td>
        <td><%= maestro.direccion %></td>
        <td><%= link_to 'Vincular con salon', vincular_con_salon_path(maestro.id) %></td>
        <td><%= link_to 'Ver informacion', maestro %></td>
        <td><%= link_to 'Editar', edit_maestro_path(maestro) %></td>
        <td><%= link_to 'Eliminar', maestro, method: :delete, data: { confirm: 'Seguro que desea borrarlo?' } %></td>
    <% end %>
  </tbody>
</table>

<br>

